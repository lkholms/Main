<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:UI="using:Microsoft.Advertising.WinRT.UI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Name="MiniTemplate">
        <Grid Background="#FFD6CE1C" >
            <Border Width="350" Height="50" Background="{StaticResource SecondaryBrush}" BorderBrush="#FF9E0A0A" BorderThickness="10,0,0,0">
                <TextBlock Text="{Binding Title}" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0" Foreground="White">
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>


</ResourceDictionary>
