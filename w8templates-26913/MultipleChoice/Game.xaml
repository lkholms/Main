            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)" Storyboard.TargetName="Grass">
            	<EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
